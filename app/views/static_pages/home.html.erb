<% if signed_in? %>
  <%= render 'signed_in_home' %>
<% else %>
  <%= render 'anonymous_home' %>
<% end %>

<script type="text/javascript">
  $(function(){
    var charactersLeft = $('#characters-left');
    $('#new-micropost').keypress(function() {
      var $this = $(this);
      if ($this.val().length > 140) {
        charactersLeft.text('You can only post 140 characters');
      } else {
        charactersLeft.text(140 - $this.val().length + " characters left");
      }
    });
  });
</script>
